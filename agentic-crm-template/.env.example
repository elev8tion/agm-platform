# Application Configuration
VITE_APP_NAME="Agentic CRM"
VITE_APP_URL=http://localhost:5173
VITE_APP_ENV=development

# Slack Integration (Required)
VITE_SLACK_CLIENT_ID=your_slack_client_id
VITE_SLACK_CLIENT_SECRET=your_slack_client_secret
VITE_SLACK_SIGNING_SECRET=your_slack_signing_secret
VITE_SLACK_REDIRECT_URI=http://localhost:5173/auth/slack/callback

# OpenAI Integration (Optional - for AI features)
VITE_OPENAI_API_KEY=sk-your-openai-api-key

# Database (Optional - if using real backend instead of mock data)
DATABASE_URL=postgresql://user:password@localhost:5432/crm_dev

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://xxx@sentry.io/xxx

# Feature Flags
VITE_ENABLE_AI=true
VITE_ENABLE_SLACK=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DARK_MODE=true

# API Configuration (if using external backend)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Security
VITE_SESSION_SECRET=your-long-random-secret-string
VITE_ENABLE_HTTPS_ONLY=false

# Email (Optional - for notifications)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# Development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
